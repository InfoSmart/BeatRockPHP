# ---------------------------------------------------
# Denegar acceso a los archivos HTACCESS.
# ---------------------------------------------------

<Files .htaccess>
deny from all
</Files>

# ---------------------------------------------------
# Opciones de servidor recomendadas.
# ---------------------------------------------------

<IfModule mod_autoindex.c>
  Options -Indexes
</IfModule>

Options -MultiViews
AddDefaultCharset UTF-8

# ---------------------------------------------------
# Permisos de acceso a directorios.
# ---------------------------------------------------

Order allow,deny
Allow from all


# ---------------------------------------------------
# Configuración PHP recomendada.
# ---------------------------------------------------

<ifModule mod_php5.c>
  php_value default_charset UTF-8
  php_value max_execution_time "50"
  php_value max_input_time "50"
  php_value memory_limit "35M"
  php_value post_max_size "10M"
  php_value session.use_trans_sid 0
  php_value upload_max_filesize "10M"

  php_flag display_errors On
  php_flag short_open_tag On
  php_flag zlib.output_compression Off
</ifModule>

# ---------------------------------------------------
# Módulo Rewrite.
# ---------------------------------------------------

<ifModule mod_rewrite.c>
  Options +FollowSymlinks
  RewriteEngine on

  # Reglas de seguridad.
  RewriteRule ^App/Helpers/(.*) ./index.php
  RewriteRule ^App/Languages/(.*) ./index.php
  RewriteRule ^App/Views/(.*) ./index.php
  RewriteRule ^App/BitRock/(.*) ./index.php

  RewriteRule ^sitemap.xml ./sitemap.php
  
  # ESCRIBA AQUÍ SUS REGLAS.
  
  # Acceder a páginas sin usar .php
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteRule ^(([A-Za-z0-9\-_]+/)*[A-Za-z0-9\-_]+)?$ $1.php

  # Usar controladores
  # Si desea usar este sistema descomente las siguientes líneas y comente las anteriores.
  ##RewriteCond $1 !^(index\.php|resources|robots\.txt)
  ##RewriteRule ^(.*)$ index.php?/$1 [L]
</ifModule>

# ---------------------------------------------------
# Cabeceras predeterminadas
# ---------------------------------------------------

<IfModule mod_headers.c>
  Header set X-UA-Compatible "IE=Edge,chrome=1"
  Header unset ETag

  <FilesMatch "\.(js|css|gif|png|jpe?g|pdf|xml|oga|ogg|m4a|ogv|mp4|m4v|webm|svg|svgz|eot|ttf|otf|woff|ico|webp|appcache|manifest|htc|crx|oex|xpi|safariextz|vcf)$" >
    Header unset X-UA-Compatible
  </FilesMatch>
</IfModule>

FileETag None

# ---------------------------------------------------
# Acceso a fuentes.
# ---------------------------------------------------

<IfModule mod_headers.c>
  <FilesMatch "\.(ttf|ttc|otf|eot|woff|font.css)$">
    Header set Access-Control-Allow-Origin "*"
  </FilesMatch>
</IfModule>

# ---------------------------------------------------
# Ocultar directorios del sistema/ocultos.
# ---------------------------------------------------

<IfModule mod_rewrite.c>
  RewriteCond %{SCRIPT_FILENAME} -d
  RewriteCond %{SCRIPT_FILENAME} -f
  RewriteRule "(^|/)\." - [F]
</IfModule>

# ---------------------------------------------------
# Denegar acceso a archivos delicados.
# ---------------------------------------------------

<FilesMatch "(\.(bak|config|sql|fla|psd|ini|log|sh|inc|swp|dist|tpl|json|sqlite)|~)$">
  Order allow,deny
  Deny from all
  Satisfy All
</FilesMatch>

<FilesMatch "SECRET$">
  Order allow,deny
  Deny from all
  Satisfy All
</FilesMatch>




# ---------------------------------------------------
# Protección.
# ---------------------------------------------------

<FilesMatch "^(shell|sh2ell|shells|C99|c99)\.php$">
  deny from all
</FilesMatch>

